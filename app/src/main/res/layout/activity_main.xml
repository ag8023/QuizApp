<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/activity_main"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
tools:context="com.aasavari.quizapp.MainActivity">

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:padding="5dp"
    android:text="US Geography Quiz"
    android:textAllCaps="true"
    android:textSize="28sp" />

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/score"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:paddingRight="10dp"
        android:text="0"
        android:textSize="28sp" />
</RelativeLayout>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/question1"
            style="@style/Question" />

        <RadioGroup
            android:id="@+id/answerGroup1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <RadioButton
                android:id="@+id/rb1grp1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RadioButton
                android:id="@+id/rb2grp1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RadioButton
                android:id="@+id/rb3grp1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RadioButton
                android:id="@+id/rb4grp1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RadioGroup>

        <TextView
            android:id="@+id/question2"
            style="@style/Question" />

        <RadioGroup
            android:id="@+id/answerGroup2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <RadioButton
                android:id="@+id/rb1grp2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RadioButton
                android:id="@+id/rb2grp2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RadioButton
                android:id="@+id/rb3grp2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RadioButton
                android:id="@+id/rb4grp2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RadioGroup>

        <TextView
            android:id="@+id/question3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" />

        <RadioGroup
            android:id="@+id/answerGroup3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <RadioButton
                android:id="@+id/rb1grp3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RadioButton
                android:id="@+id/rb2grp3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RadioButton
                android:id="@+id/rb3grp3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RadioButton
                android:id="@+id/rb4grp3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RadioGroup>

        <TextView
            android:id="@+id/question4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="10dp" />

        <CheckBox
            android:id="@+id/check1Q4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="CheckBoxChecked" />

        <CheckBox
            android:id="@+id/check2Q4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="CheckBoxChecked" />

        <CheckBox
            android:id="@+id/check3Q4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="CheckBoxChecked" />

        <CheckBox
            android:id="@+id/check4Q4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="CheckBoxChecked" />

        <TextView
            android:id="@+id/question5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="10dp" />

        <CheckBox
            android:id="@+id/check1Q5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="CheckBoxChecked" />

        <CheckBox
            android:id="@+id/check2Q5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="CheckBoxChecked" />

        <CheckBox
            android:id="@+id/check3Q5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="CheckBoxChecked" />

        <CheckBox
            android:id="@+id/check4Q5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="CheckBoxChecked" />

        <TextView
            android:id="@+id/question6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="10dp" />

        <CheckBox
            android:id="@+id/check1Q6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="CheckBoxChecked" />

        <CheckBox
            android:id="@+id/check2Q6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="CheckBoxChecked" />

        <CheckBox
            android:id="@+id/check3Q6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="CheckBoxChecked" />

        <CheckBox
            android:id="@+id/check4Q6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="CheckBoxChecked" />

        <TextView
            android:id="@+id/question7"
            style="@style/Question" />

        <EditText
            android:id="@+id/editOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLines="1"/>

        <TextView
            android:id="@+id/question8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="10dp" />

        <EditText
            android:id="@+id/editTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLines="1"
            />

        <Button
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/submit" />
    </LinearLayout>
</ScrollView>
</LinearLayout>

